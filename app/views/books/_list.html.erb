<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <p><%= image_tag user.get_profile_image(100,100) %></p>

      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
      <% end %>

      <%= form_with model: book do |f| %>
      <h1>New book</h1>

      <h4>Title</h4>
      <%= f.text_field :title %>

      <h4>Opinion</h4>
      <%= f.text_area :body %>

      <%= f.submit 'Create Book' %>
    <% end %>
    </div>