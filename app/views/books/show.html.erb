<%= flash[:notice] %>

<%= render 'list', book: @book2, user: @user %>

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>

  <table class="table">
    <tbody>
      <tr>
        <td>
          <%= link_to user_path(@book.user.id) do %>
          <p><%= image_tag @book.user.get_profile_image(100,100) %></p>
          <br>
          <%= @book.user.name %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path do %>
            <%= @book.title %>
          <% end %>
        </td>
        <td>
          <%= @book.body %>
        </td>

        <% if @book.user_id == current_user.id %>
        <td>
          <%= link_to edit_book_path do %>
          <div class="btn btn-success">Edit</div>
          <% end %>
        </td>
        <td>
          <%= link_to "Destroy", book_path(@book.id), class: "btn btn-sm btn-danger",method: :delete, "data-confirm" => "本当に削除しますか？" %>
        </td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>
